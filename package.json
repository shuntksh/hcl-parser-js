{
	"name": "hcl-parser-js",
	"version": "0.0.3",
	"description": "A pure JavaScript HCL parser implementation",
	"author": "Shun Takahashi",
	"license": "MIT",
	"packageManager": "bun@1.2.2",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.mjs",
			"require": "./dist/index.js"
		},
		"./schema": {
			"types": "./dist/schema.d.ts",
			"import": "./dist/schema.mjs",
			"require": "./dist/schema.js"
		},
		"./types": "./dist/types.ts"
	},
	"files": [
		"dist",
		"package.json",
		"LICENSE"
	],
	"scripts": {
		"generate": "peggy -c peggy.config.cjs --test-file src/grammar.test.hcl > /dev/null",
		"prebuild": "bun run generate",
		"build": "tsup --entry.index src/index.ts --entry.schema src/schema.ts --format esm,cjs --dts --minify",
		"postbuild": "cp src/types.ts dist",
		"lint": "biome check ./src",
		"lint:ci": "biome ci ./src",
		"format": "biome check --write ./src",
		"test": "bun test",
		"prepublishOnly": "bun run build"
	},
	"optionalDependencies": {
		"zod": "^3"
	},
	"devDependencies": {
		"@biomejs/biome": "1.9.4",
		"@types/bun": "1.2.2",
		"peggy": "4.2.0",
		"tsup": "^8.3.6",
		"typescript": "5.7.3",
		"zod": "3.24.2"
	}
}